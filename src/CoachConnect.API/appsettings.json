{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=4444;Database=coach_connect;User ID=coach-app;Password=coach123;" // husk sette inn Port for evt db docker container
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/logs-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": "True",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      },
      {
        "Name": "MySQL", // hvorfor fungerer ikke log table i mysql? Ketils comment
        "Args": {
          "connectionString": "Server=localhost;Database=coach_connect;User ID=coach-app;Password=coach123;", 
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]

  },

  "AllowedHosts": "*"
}
